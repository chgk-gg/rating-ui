<table class="rating-table table-fixed">
  <thead>
  <tr class="rating-table-header">
    <th class="border px-2 py-2">Дата</th>
    <th class="border px-2 w-1/3">Турнир</th>
    <th class="border px-2 w-1/3">Состав</th>
    <th class="border px-2">Место</th>
    <th class="border px-2">Рейтинг</th>
    <th class="border px-2">Дельта</th>
  </tr>
  </thead>

  <tbody>
  <% @old_tournaments.each do |tournament| %>
    <tr class="border table-row">
      <td class="border px-2 py-2"><%= I18n.l(tournament["date"].to_date, format: :short) %></td>
      <td class="border px-2 hover:underline">
        <%= link_to(tournament['name'], tournament_path(tournament_id: tournament['id'])) %>
      </td>
      <td class="border px-2 py-2 text-left">
        <%= render(PlayerComponent.with_collection(tournament['players'])) %>
      </td>
      <td class="border px-2 text-center"><%= round_place(tournament['place']) %></td>
      <td class="border px-2 text-center"><%= tournament['rating'] %></td>
      <td class="border px-2 text-center"><%= tournament['rating_change'] %></td>
    </tr>
  <% end %>
  </tbody>
</table>
