<table class="shadow-lg bg-white">
  <thead>
  <tr>
    <th class="bg-blue-100 border text-left px-8 py-4">Дата</th>
    <th class="bg-blue-100 border text-left px-8 py-4">Турнир</th>
    <th class="bg-blue-100 border text-left px-8 py-4">Место</th>
    <th class="bg-blue-100 border text-left px-8 py-4">Рейтинг</th>
  </tr>
  </thead>

  <tbody>
  <% @tournaments.each do |tournament| %>
    <tr class="border py-2 hover:bg-gray-100">
      <td class="border px-8 py-2"><%= tournament['date'] %></td>
      <td class="border px-8 py-2"><%= tournament['name'] %></td>
      <td class="border px-8 py-2"><%= tournament['place'] %></td>
      <td class="border px-8 py-2"><%= tournament['rating'] %></td>
    </tr>
  <% end %>
  </tbody>
</table>
