<table class="shadow-lg bg-white table-fixed">
  <thead>
  <tr>
    <th class="bg-blue-100 border text-center px-1 py-2">Релиз</th>
    <th class="bg-blue-100 border text-center px-1 py-2">Место</th>
    <th class="bg-blue-100 border text-center px-1 py-2">Рейтинг</th>
    <th class="bg-blue-100 border text-center px-1 py-2">Δ</th>
    <th class="bg-blue-100 border text-center px-1 py-2">Дата</th>
    <th class="bg-blue-100 border text-center px-1 w-1/3">Турнир</th>
    <th class="bg-blue-100 border text-center px-1 w-1/2">Состав</th>
    <th class="bg-blue-100 border text-center px-1">М</th>
    <th class="bg-blue-100 border text-center px-1">Бонус</th>
    <th class="bg-blue-100 border text-center px-1">Δ</th>
  </tr>
  </thead>

  <tbody>
  <% @tournaments.each do |tournament| %>
    <tr class="border py-2 hover:bg-gray-100">
    <% if tournament["tournaments_in_release"].present? %>
      <td rowspan="<%= tournament["tournaments_in_release"] %>" class="border px-1 py-2">
        <%= I18n.l(tournament["release_date"].to_date, format: :short) %>
      </td>
      <td rowspan="<%= tournament["tournaments_in_release"] %>" class="border px-1 text-center">
        <%= round_place(tournament['release_place']) %>
      </td>
      <td rowspan="<%= tournament["tournaments_in_release"] %>" class="border px-1 text-center">
        <%= tournament['release_rating'] %>
      </td>
      <td rowspan="<%= tournament["tournaments_in_release"] %>" class="border px-1 text-center">
        <%= tournament['release_rating_change'] %>
      </td>
    <% end %>
      <td class="border px-1 py-2">
        <%= I18n.l(tournament["date"].to_date, format: :short) %>
      </td>
      <td class="border px-1">
        <%= link_to(tournament['name'], tournament_path(tournament_id: tournament['id'])) %>
      </td>
      <td class="border px-1 py-2 text-left">
        <%= render partial: "shared/roster", collection: tournament['players'], as: :player %>
      </td>
      <td class="border px-1 text-center">
        <%= round_place(tournament['place']) %>
      </td>
      <td class="border px-1 text-center">
        <%= tournament['rating'] %>
      </td>
      <td class="border px-1 text-center">
        <%= tournament['rating_change'] %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
