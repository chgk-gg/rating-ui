<%= link_to_previous_player_release_page(release_id: @release_id, current_top: @paging.from, current_bottom: @paging.to, first_name: @first_name, last_name: @last_name) %>

<% if @paging.last_page > 5 %>
  <% (1..5).each do |page| %>
    <%= link_to_player_release_page(release_id: @release_id, page: page, players_per_page: @paging.per_page, first_name: @first_name, last_name: @last_name) %>
  <% end %>

  <% if @paging.last_page > 6 %>
    ...
  <% end %>

  <%= link_to_last_player_release_page(release_id: @release_id, players_in_release: @paging.items_count, players_per_page: @paging.per_page, first_name: @first_name, last_name: @last_name) %>
<% else %>
  <% (1..@paging.last_page).each do |page| %>
    <%= link_to_player_release_page(release_id: @release_id, page: page, players_per_page: @paging.per_page, first_name: @first_name, last_name: @last_name) %>
  <% end %>
<% end %>

<%= link_to_next_player_release_page(release_id: @release_id, current_top: @paging.from, current_bottom: @paging.to, first_name: @first_name, last_name: @last_name) %>
