<% @title="Рейтинг" %>
<div class="flex">
  <div class="flex-col mx-auto my-4">
    <div class="flex-row my-1">
      <%= form_with method: :get do |form| %>
        <%= form.text_field :first_name,
                            value: @first_name,
                            placeholder: "Имя",
                            class: "rating-text-field" %>
        <%= form.text_field :last_name,
                            value: @last_name,
                            placeholder: "Фамилия",
                            class: "mx-3 rating-text-field" %>
        <%= form.submit "Поиск", class: "rating-button", name: nil %>
      <% end %>
    </div>
    <div class="flex-row">
      <div>
        <% cache "player_release_dropdown/#{@model_name}/#{@first_name}/#{@last_name}/#{@release_id}" do %>
          <%= render "release_dropdown" %>
        <% end %>
      </div>
    </div>

    <div class="flex-row my-2">
      <% cache "player_release_paging/#{@model_name}/#{@first_name}/#{@last_name}/#{@release_id}/#{@paging.from}-#{@paging.to}" do %>
        <%= render "paging" %>
      <% end %>
    </div>

    <div class="flex-row my-2">
      <% cache "player_release/#{@model_name}/#{@first_name}/#{@last_name}/#{@release_id}/#{@paging.from}-#{@paging.to}" do %>
        <%= render "player_release" %>
      <% end %>
    </div>

    <div class="flex-row my-2">
      <% cache "player_release_paging/#{@model_name}/#{@first_name}/#{@last_name}/#{@release_id}/#{@paging.from}-#{@paging.to}" do %>
        <%= render "paging" %>
      <% end %>
    </div>
  </div>
</div>