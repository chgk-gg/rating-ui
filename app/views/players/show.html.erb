<% @title="#{@player.full_name} — рейтинг" %>
<div class="text-center text-xl">
  <h1><%= @player.first_name %>&nbsp;<%= @player.last_name %></h1>
</div>
<div class="text-center py-2 text-l hover:underline">
<%= link_to("Страница на rating.chgk.info", "https://rating.chgk.info/player/#{@player.id}") %>
</div>
<div class="py-2">
  <% cache "player_tournaments_list/#{@model_name}/#{@player.id}" do %>
    <%= render "tournaments_list" %>
  <% end %>
</div>
<div class="py-2 text-center">
  <turbo-frame id="old-tournaments">
    <a href="<%= player_old_tournaments_path(model: @model_name, player_id: @player.id) %>"
       class="rating-button"
       data-turbo-frame="old-tournaments">
      Показать турниры до 2021 года
    </a>
  </turbo-frame>
</div>
