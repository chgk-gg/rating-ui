<% @title="Рейтинг МАИИ" %>
<div class="flex">
  <div class="flex-col mx-4 my-1">
    <div class="flex-row my-1">
    <%= form_with method: :get do |form| %>
      <%= form.text_field :team,
                          value: @team,
                          placeholder: "Команда",
                          class: "rounded-md border-gray-300 shadow-m focus:border-blue-100 focus:ring focus:ring-blue-100 focus:ring-opacity-50" %>
      <%= form.text_field :city,
                          value: @city,
                          placeholder: "Город",
                          class: "mx-1 rounded-md border-gray-300 shadow-m focus:border-blue-100 focus:ring focus:ring-blue-100 focus:ring-opacity-50" %>
      <%= form.submit "Поиск", class: "text-sm rounded-md px-2 py-1 mt-1", name: nil %>
    <% end %>
    </div>
    <div class="flex-row my-2">
      <div>
        <% cache "release_dropdown/#{@model_name}/#{@team}/#{@city}#{@release.id}" do %>
          <%= render "release_dropdown" %>
        <% end %>
      </div>
    </div>

    <% if @paging.display? %>
      <div class="flex-row my-2">
        <% cache "release_paging/#{@model_name}/#{@release.id}/#{@team}/#{@city}/#{@paging.from}-#{@paging.to}" do %>
          <%= render "paging" %>
        <% end %>
      </div>
    <% end %>

    <div class="flex-row my-2">
      <% cache "release/#{@model_name}/#{@release.id}/#{@team}/#{@city}/#{@paging.from}-#{@paging.to}" do %>
        <%= render "release" %>
      <% end %>
    </div>

    <% if @paging.display? %>
      <div class="flex-row my-2">
        <% cache "release_paging/#{@model_name}/#{@release.id}/#{@team}/#{@city}/#{@paging.from}-#{@paging.to}" do %>
          <%= render "paging" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>